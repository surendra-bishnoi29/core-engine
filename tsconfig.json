{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    // ... other options like target, module, strict, esModuleInterop, declaration: true
    "target": "ES2022",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true, // Important for generating .d.ts files
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}